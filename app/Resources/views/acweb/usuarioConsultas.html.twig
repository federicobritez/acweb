{% extends 'panel_usuario_base.html.twig' %}
{% block title %} {{ parent() }} {% endblock %}
{% block navbar %} {{ parent() }} {% endblock %}
{% block status_bar %} {{ parent() }} {% endblock %}
{% block body %} {{ parent() }} {% endblock %}

{% block contenido %}
<legend>Consultas: </legend>
<blockquote>
                    <p>Sus dudas serán respondidas mediante mail. Además pude cancelar sus reservas por este medio o confirmar las mismas</p>
                </blockquote>
<form class="nomargin sky-form" role="form" method="post" action="" enctype="multipart/form-data">
	<div class="form-group">
		<label for="name" class="col-sm-2 control-label">Asunto</label>
		<div class="col-sm-10">
			<input required="" type="text" class="form-control" id="name" name="name" placeholder="Asunto" value="">
		</div>
	</div>
	<div class="form-group">
		<label for="email" class="col-sm-2 control-label">Email</label>
		<div class="col-sm-10">
			<input required="" type="email" class="form-control" id="email" name="email" placeholder="ejemplo@dominio.com" value="">
		</div>
	</div>
	<div class="form-group">
		<label for="message" class="col-sm-2 control-label">Mensaje</label>
		<div class="col-sm-10">
			<textarea required="" class="form-control" rows="4" name="message"></textarea>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-10 col-sm-offset-2">
			<input id="submit" name="submit" type="submit" value="Enviar" class="btn btn-primary">
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-10 col-sm-offset-2">
			<!-- Will be used to display an alert to the user-->
		</div>
	</div>
</form>

{%endblock%}
{% block footer %}  {{ parent() }}  {% endblock %}