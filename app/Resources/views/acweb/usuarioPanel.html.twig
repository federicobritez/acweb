                    <td>{{item.fechaDesde.date|date('d/m/Y')}} al {{item.fechaHasta.date|date('d/m/Y')}}</td>
                    <td>{{item.cantPersonas}}</td>
                    <td>${{item.valorTotal}}</td>
                </tr>
                {% set i = i+1 %}

                {%endfor %}
              </tbody>
            </table> 
{% endblock %}

